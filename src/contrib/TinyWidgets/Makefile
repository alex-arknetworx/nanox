# Generated automatically from Makefile.in by configure.
# Top level Makefile generated by configure.
# To make changes, edit Makefile.in and rerun configure.

DIRS = src demos tndesigner

MAKE=make

TOP=.
CC=gcc

CFLAGS=
ifeq ($(DEBUG), Y)
CFLAGS += -g
else
CFLAGS += -O2
endif
CFLAGS += -Wall
#$(info    CFLAGS is $(CFLAGS))

LIBPATH=$(TOP)/lib

all:
	@for dir in $(DIRS); do $(MAKE) -C $$dir; done

tnw:
	$(MAKE) -C src

demo:
	$(MAKE) -C demos

tnd:
	$(MAKE) -C tndesigner

install:
	cp $(LIBPATH)/libtnW.a /usr/lib
	cp include/*.h /usr/include/microwin

clean:
	@for dir in $(DIRS); do $(MAKE) -C $$dir clean; done

distclean: clean
	@ rm -rf Makefile Make.rules config.cache config.log config.status
	@ for dir in $(DIRS); do rm -rf $$dir/Makefile; done 
       
depend:
	@for dir in $(DIRS); do $(MAKE) -C $$dir depend; done
